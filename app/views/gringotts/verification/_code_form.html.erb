<div class="code">
  <%= form_for @attempt,
              url: attempt_url,
              method: :post,
              :html=> {:id => 'new_attempt'} do |f| %>
  
    <%= f.text_field :code_received %>
  
    <%= f.submit "Verify Code" %>
    <%= check_box_tag :remember_me %> <%= label_tag :remember_me,'Remember me on this device' %>
   <% end %>
  
  <%- if flash[:gringotts_error] %>
    <div class="error">
      Code was incorrect. A new code has been sent to your phone. Please try again.  
    </div>
  <%- end %>
  
</div><!-- /code -->